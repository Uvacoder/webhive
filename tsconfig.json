{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "pretty": true,
    "jsx": "react",
    "jsxFactory": "h",
    "removeComments": false,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "include": [
    "src/webhive.api/**/*.ts",
    "src/webhive.web/**/*.ts",
    "src/webhive.harvest/**/*.ts",
    "src/webhive.api/**/*.tsx",
    "src/webhive.web/**/*.tsx",
    "src/webhive.harvest/**/*.tsx"
  ]
}
